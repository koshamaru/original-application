<div class="contents row" >
  <% @events.each do |event| %>
    <div class="content_post" style="background-image: url(<%= event.image%>);">
      <% if circle_signed_in? && event.circle_id == current_circle.id %>
        <div class="more">
          <span><%= image_tag 'arrow_top.png' %></span>
          <ul class="more_list">
            <li>
              <%= link_to '編集', "/events/#{event.id}/edit", method: :get %>
            </li>
            <li>
              <%= link_to '削除', "/events/#{event.id}", method: :delete %>
            </li>
          </ul>
        </div>
      <% end %>
    </div>
      <%= link_to "#{event.name}", "/events/#{event.id}", method: :get %>
  <% end %>
</div>
